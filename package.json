{
  "name": "react-template",
  "version": "0.0.1",
  "homepage": "https://parthw.github.io/react-boilerplate-template",
  "description": "Just another React Template",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/parthw/react-boilerplate-template.git"
  },
  "scripts": {
    "test": "jest",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "start": "webpack-dev-server --mode=development",
    "build": "webpack --mode=production",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [
    "react",
    "typescript",
    "styled-components"
  ],
  "author": "parthw",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.13",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.3",
    "@types/webpack-dev-server": "^3.11.0",
    "clean-webpack-plugin": "^3.0.0",
    "coveralls": "^3.1.0",
    "file-loader": "^6.1.0",
    "fork-ts-checker-webpack-plugin": "^5.1.0",
    "gh-pages": "^3.1.0",
    "html-webpack-plugin": "^4.4.1",
    "jest": "^26.4.2",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.2.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "jsx",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)",
      "**/__tests__/**/*.+(ts|tsx|js)"
    ]
  }
}
